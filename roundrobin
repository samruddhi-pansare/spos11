#include <iostream>
#include <queue>
using namespace std;

int main() {
    int n = 4, tq = 2;
    string pid[] = {"P1","P2","P3","P4"};
    int arrival[] = {0,1,4,3};
    int burst[] = {6,4,8,3};
    int rem[4], finish[4], wait[4], tat[4];
    for(int i=0;i<n;i++) rem[i] = burst[i];

    queue<int> q;
    int time = 0, completed = 0;
    bool added[4] = {false};
    q.push(0); added[0]=true;

    while(completed < n){
        if(q.empty()){ time++; continue; }
        int i = q.front(); q.pop();

        int exec = min(tq, rem[i]);
        rem[i]-=exec;
        time += exec;

        for(int j=0;j<n;j++)
            if(!added[j] && arrival[j]<=time && rem[j]>0){ q.push(j); added[j]=true; }

        if(rem[i]>0) q.push(i);
        else{ finish[i]=time; tat[i]=finish[i]-arrival[i]; wait[i]=tat[i]-burst[i]; completed++; }
    }

    cout<<"PID\tArr\tBurst\tFinish\tWait\tTAT\n";
    for(int i=0;i<n;i++)
        cout<<pid[i]<<"\t"<<arrival[i]<<"\t"<<burst[i]<<"\t"<<finish[i]<<"\t"<<wait[i]<<"\t"<<tat[i]<<endl;

    return 0;
}
