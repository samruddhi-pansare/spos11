#include <iostream>
#include <climits>
using namespace std;

int main() {
    int n = 4;
    string pid[] = {"P1", "P2", "P3", "P4"};
    int arrival[] = {0, 1, 4, 3};
    int burst[]   = {6, 4, 8, 3};
    int rem[4], finish[4], wait[4], tat[4];
    for (int i = 0; i < n; i++) rem[i] = burst[i];

    int done = 0, time = 0;

    while (done < n) {
        int shortest = -1, minRem = INT_MAX;

        // find process with smallest remaining time that has arrived
        for (int i = 0; i < n; i++) {
            if (arrival[i] <= time && rem[i] > 0 && rem[i] < minRem) {
                minRem = rem[i];
                shortest = i;
            }
        }

        if (shortest == -1) { // no process arrived yet
            time++;
            continue;
        }

        rem[shortest]--;      // run for 1 unit
        time++;

        if (rem[shortest] == 0) {   // if process finishes
            done++;
            finish[shortest] = time;
            tat[shortest] = finish[shortest] - arrival[shortest];
            wait[shortest] = tat[shortest] - burst[shortest];
        }
    }

    cout << "PID\tArr\tBurst\tFinish\tWait\tTAT\n";
    for (int i = 0; i < n; i++) {
        cout << pid[i] << "\t" << arrival[i] << "\t" << burst[i] << "\t"
             << finish[i] << "\t" << wait[i] << "\t" << tat[i] << endl;
    }

    return 0;
}
